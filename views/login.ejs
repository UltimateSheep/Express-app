<% layout('layout') -%>
    <form class="mt-3 needs-validation" method="post" action="/login">
        <div class="row mb-3 mx-xxl-5">
            <label for="validationCustomUsername" class="form-label">Username</label>
            <div class="input-group has-validation">
                <span class="input-group-text" id="inputGroupPrepend">?</span>
                <input type="text" class="form-control" id="validationCustomUsername"
                    aria-describedby="inputGroupPrepend" required="" minlength="3" maxlength="20" name="Username">
                <div class="invalid-feedback">
                    Please choose a username.
                </div>
            </div>
        </div>
        <div class="row mb-3 mx-xxl-5">
            <label for="validationCustomUsername" class="form-label">Password</label>
            <div class="input-group has-validation">
                <span class="input-group-text" id="inputGroupPrepend">!</span>
                <input type="password" class="form-control" id="validationCustomPassword"
                    aria-describedby="inputGroupPrepend" required="" minlength="3" maxlength="20" name="Password"
                    alt="adwad">
                <div class="invalid-feedback">
                    Please choose a password.
                </div>
            </div>
        </div>
        <div class="row mb-12 mx-xxl-5">
            <div class="form-check">
                <input class="form-check-input" type="checkbox" value="" id="invalidCheck" required="">
                <label class="form-check-label" for="invalidCheck">
                    Are you a robot?(check = no)
                </label>
                <div class="invalid-feedback">
                    You must not be a robot get rekt zuck
                </div>
            </div>
        </div>
        <button type="submit" class="btn btn-primary mb-3 mx-xxl-5">log in</button>
        <p class="text-info">Don't have an account? get one <a href="/register">here</a></p>
        <p class="text-danger">
            <% if (message) { %>
                <%= message %>
                    <% } %>
        </p>
    </form>
    <% block('js', `<script>
        var forms = document.querySelectorAll('.needs-validation')
        Array.prototype.slice.call(forms)
        .forEach(function (form) {
        form.addEventListener('submit', function (event) {
        if (!form.checkValidity()) {
        event.preventDefault()
        event.stopPropagation()
        }

        form.classList.add('was-validated')
        }, false)
        })
        </script>`) -%>
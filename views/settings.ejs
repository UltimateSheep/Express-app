<% layout('layout') -%>
<div class="wrapper">
    <ul class="nav nav-tabs">
        <li class="nav-item">
            <a class="nav-link link-secondary" aria-current="page" href="/">Main</a>
        </li>
        <li class="nav-item">
            <a class="nav-link disabled" href="/">Chat</a>
        </li>
        <li class="nav-item">
            <a class="nav-link active" aria-current="page" href="/settings">Settings</a>
        </li>
    </ul>
    <div class="ms-5">
        <ul class="list-group">
            <li class="list-group-item"><p>Username : <%= User.Username %></p>
                    <form action="/ChangeName" method="get">
                        <input type="submit" value="✏️" class="btn btn-secondary">
                    </form>
            </li>
            <li class="list-group-item"><p>Password : *secret*</p></li>
            <li class="list-group-item"><p>Firstname : <%=User.Firstname %></p>
            </li>
            <li class="list-group-item"><p>Lastname : <%=User.Lastname %></p>
            </li>
        </ul>
          <p class="mt-3 px-3">theme: </p>

        <div class="btn-group px-3" role="group" aria-label="Basic radio toggle button group">

          <input type="radio" class="btn-check" name="btnGroupRadio" id="btnRadio1"         autocomplete="off" checked="" onclick="switchToLightMode();">
          <label class="btn btn-outline-secondary" for="btnRadio1">Light Mode</label>

          <input type="radio" class="btn-check" name="btnGroupRadio" id="btnRadio2"         autocomplete="off" onclick="switchToDarkMode();">
          <label class="btn btn-outline-secondary" for="btnRadio2">Dark Mode</label>
        </div>
        <hr>
    </div>
    <form action="/logout" method="post">
        <button type="submit" class="btn btn-danger mt-3">logout</button>
    </form>
    <form action="/report" method="post" class="text-center">
        <p>Found a bug? Report it here!</p>
        <div class="">
            <input type="email" name="Email" id="emailReport" placeholder="Your email" class="mb-3" required>
            <input type="hidden" name="Name" value="<%= User.Username%>" required>
            <br>
            <textarea name="Content" id="textArea" cols="50" required>

            </textarea>
            <input type="submit" value="submit">
        </div>
    </form>
